@using CVMVC.Web.Models.Entity
@model List<SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Social Media Table</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">
                        <i class="fas fa-plus" style="color:#ffffff;"></i>
                    </button>

                    <table class="table table-bordered text-center mt-2">
                        <thead>
                            <tr>
                                <th style="width: 10px">ID</th>
                                <th>Social Media</th>
                                <th>LINK</th>
                                <th>ICON</th>
                                <th>STATE</th>
                                <th>Delete</th>
                                <th>EDIT</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.smname</td>
                                    <td>@item.link</td>
                                    <td>@item.icon</td>
                                    <td>
                                        @(item.state != null && (bool)item.state
                                            ? "Active"
                                            :"Passive")
                                    </td>
                                    <td>
                                        <a href="/SocialMedia/DeleteSocialMedia/@item.ID" class="btn btn-danger">
                                            <i class="fa fa-trash-alt"></i>
                                            Delete
                                        </a>

                                    </td>
                                    <td>
                                        <a href="/SocialMedia/UpdateSocialMedia/@item.ID" class="btn btn-info btn-sm">
                                            <i class="fas fa-pencil-alt"></i>
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                                                            }

                        </tbody>
                    </table>
                </div>

            </div>


        </div>

    </div>
    <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">
        <i class="fas fa-plus" style="color:#ffffff;"></i>
    </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h2 class="modal-title">Add New Account</h2>
                </div>
                <form method="post" action="/SocialMedia/AddSocialMedia">
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="smname">Social Media Name</label>
                            <input type="text" class="form-control" id="smname" name="smname" required>
                            <label for="Link">Social Media Link</label>
                            <input type="text" class="form-control" id="Link" name="link" required>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
