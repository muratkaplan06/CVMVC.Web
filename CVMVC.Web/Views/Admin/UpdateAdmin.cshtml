@model CVMVC.Web.Models.Entity.Admin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h2 class="h1-responsive font-weight-bold text-center my-4">Edit Admin</h2>
    </div>
    <div class="row">

        <div class="col-md-9 mb-md-0 mb-5">
            @using (Html.BeginForm("UpdateAdmin", "Admin",
                 new { ReturnUrl = Request.QueryString["ReturnUrl"] },
                 FormMethod.Post,
                 new { @class = "form-group" }
                 ))
            {

                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            @Html.LabelFor(m => m.username, "Email", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.username, new
                            {
                                @class = "form-control",
                                placeholder = "Email",
                                autofocus = ""
                            })
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            @Html.LabelFor(m => m.password, "Password", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.password, new
                            {
                                @class = "form-control",
                                placeholder = "Password",
                                autofocus = ""
                            })
                        </div>
                    </div>

                </div>
                <div class="row text-center">
                    <div class="col-4 mt-3">
                        <button class="btn btn-lg btn-primary btn-block" style="width:200px" type="submit">
                            <i class="fas fa-pencil-alt"></i>
                            Edit
                        </button>
                    </div>
                </div>

            }

        </div>

    </div>


</div>


